---
const base = (import.meta as any).env?.BASE_URL || '/';
---
<header class="w-full border-b bg-background">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 py-4 flex items-center justify-between">
    <a href={base} class="font-semibold text-lg text-foreground">make-sync</a>
    
    <!-- Mobile menu button (only button on mobile) -->
    <button id="mobile-menu-button" class="sm:hidden p-2 rounded-md text-muted-foreground hover:text-foreground hover:bg-muted" aria-label="Toggle menu">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
    
    <!-- Desktop navigation -->
    <nav class="hidden sm:flex items-center gap-4">
      <div class="space-x-4">
        <a href={base} class="text-sm text-muted-foreground hover:underline hover:text-foreground">Home</a>
        <a href={`${base}docs`} class="text-sm text-muted-foreground hover:underline hover:text-foreground">Documentation</a>
        <a href="https://github.com/rolldone/make-sync" class="text-sm text-muted-foreground hover:underline hover:text-foreground" target="_blank" rel="noreferrer">GitHub</a>
      </div>
      <div>
        <div id="theme-toggle-placeholder"></div>
      </div>
    </nav>
  </div>
  
  <!-- Mobile navigation menu (includes theme toggle) -->
  <div id="mobile-menu" class="hidden sm:hidden border-t bg-background">
    <nav class="px-4 py-4 space-y-3">
      <a href={base} class="block text-sm text-muted-foreground hover:text-foreground">Home</a>
      <a href={`${base}docs`} class="block text-sm text-muted-foreground hover:text-foreground">Documentation</a>
      <a href="https://github.com/rolldone/make-sync" class="block text-sm text-muted-foreground hover:text-foreground" target="_blank" rel="noreferrer">GitHub</a>
      <div class="pt-2 border-t">
        <div class="flex items-center justify-between">
          <span class="text-sm text-muted-foreground">Theme</span>
          <div id="theme-toggle-placeholder-mobile"></div>
        </div>
      </div>
    </nav>
  </div>
</header>